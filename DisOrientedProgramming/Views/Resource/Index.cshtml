@model ResourceLink
@{
  
    ViewData["Title"] = "Resources";
}




    <!-- Mental health links table -->
    <h1 class="text-center">@ViewData["Title"]</h1>
    <div class="panel-body">
        <table class="table table-sm table-striped table-bordered">

            <thead>
                <!-- header row table column names auto bold -->
                <tr>

                    <th colspan="2"> Mental Wellness Resources</th>
                </tr>
            </thead>

            @foreach (ResourceLink l in ViewBag.MentalHealth)
            {
                <p class="Big-Home">
                <tr>
                    <td><a href="@l.Address">@l.ResourceName</a></td>
                    <td>@l.Description</td>
                </tr>
                </p>
            }


        </table>
    </div>


    <div class="panel-body">
        <table class="table table-sm table-striped table-bordered">

            <thead>
                <!-- header row table column names auto bold -->
                <tr>

                    <th colspan="2"> Physical Wellness Resources</th>
                </tr>
            </thead>
            <tbody>
                @foreach (ResourceLink l in ViewBag.PhysicalHealth)
                {
                    <p class="Big-Home">
                        <!-- tr = table row -->
                    <tr>
                        <!-- td = table cell what other info do you wnat to show?-->
                        <td><a href="@l.Address">@l.ResourceName</a></td>
                        <td>@l.Description</td>
                    </tr>
                    </p>
                    }

                </tbody>
        </table>

    </div>

