<h3>Client Form to Add Resources</h3>
<form method="post" action ="/Resource/Create">
    <div class="form-group py-2">
        <label asp-for="ResourceName">Resource Name</label>
        <input asp-for="ResourceName" class="form-control" required />
    </div>
 
    <div class="form-group py-2">
        <label asp-for="ResourceType">Resource Type</label>
       <select asp-for="ResourceType" class= "form-control">
           <option value="Mental Wellness"> Mental Wellness</option>
           <option value="Physical Wellness">Physical Wellness</option>
       </select>
    </div>
    <div class="form-group py-2">
        <label asp-for="Address"></label>
        <textarea asp-for="Address" class="form-control"></textarea>
    </div>
    <div class="form-group py-2">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>


    <div>
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>





