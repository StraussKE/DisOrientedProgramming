@model ForumPost
@{
    ViewData["Title"] = "Forum";
}


    <h1 class="text-center">@ViewData["Title"]</h1>
    <h3 class="text-center">Please be respectful</h3>
    <!--start list of topics-->
    <div class="container border m-2">
        <h3 class="text-center">Topics</h3>
        @for (int i = 0; i < ViewBag.Topics.Count; i++)
        {
            <div class="container border rounded my-3 bg-success p-1">
                <a asp-action="Topic" asp-controller="Forum" asp-route-t="@ViewBag.Topics[i].ForumTopicId" class="Normal-link h3 p-2 m-2 text-white">@ViewBag.Topics[i].Name :  @ViewBag.Topics[i].Desc</a>

            </div>


        }
    </div>
    <h2>Make a Post!</h2>
    <form method="post">
        <div class="form-group py-2">
            <label asp-for="PostTitle"></label>
            <input asp-for="PostTitle" class="form-control" required />
        </div>
        <div class="form-group py-2">
            <label asp-for="Topic.Name">Topic:</label>
            <select asp-for="Topic.Name" class="form-control" size="@ViewBag.Topics.Count" multiple required>

                @for (int i = 0; i < ViewBag.Topics.Count; i++)
                {
                    <option value="@ViewBag.Topics[i].Name">@ViewBag.Topics[i].Name</option>
                }
            </select>
        </div>
        <div class="form-group py-2">
            <label asp-for="PostText">Post</label>
            <textarea asp-for="PostText" class="form-control"></textarea>
        </div>
        <div>
            <button type="submit" class="btn btn-primary">Post</button>
        </div>
    </form>
