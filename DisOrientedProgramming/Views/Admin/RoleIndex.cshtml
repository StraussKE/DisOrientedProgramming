@model IEnumerable<IdentityRole>

<div class="bg-info m-1 p-1"><h4>Roles</h4></div>

<div class="text-danger" asp-validation-summary="ModelOnly"></div>

<table class="table table-sm table-bordered table-bordered">
    <tr><th>Role</th><th></th></tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="4" class="text-center">No Roles</td></tr>
    }
    else
    {
        foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
                        <a class="btn btn-sm btn-info" asp-action="EditRole"
                           asp-route-id="@role.Id">Manage Roles</a>
                    </form>
                </td>
            </tr>
        }

    }
</table>
<br />
<br />
<a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Back to Admin Index</a>