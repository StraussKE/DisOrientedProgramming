@model IEnumerable<UserRoleViewModel>


<div class="bg-info m-1 p-1 text-white"><h4>User Accounts</h4></div>

<div class="text-danger" asp-validation-summary="ModelOnly"></div>
<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th>
                @if (ViewBag.orderBy == "firstname")
                {
                    <a asp-controller="AdminUser" asp-action="Index" asp-route-orderBy="revfirstname">First Name</a>
                }
                else
                {
                    <a asp-controller="AdminUser" asp-action="Index" asp-route-orderBy="firstname">First Name</a>
                }
            </th>
            <th>
                @if (ViewBag.orderBy == "lastname")
                {
                    <a asp-controller="AdminUser" asp-action="Index" asp-route-orderBy="revlastname">Last Name</a>
                }
                else
                {
                    <a asp-controller="AdminUser" asp-action="Index" asp-route-orderBy="lastname">Last Name</a>
                }
            </th>
            <th>
                @if (ViewBag.orderBy == "username")
                {
                    <a asp-controller="AdminUser" asp-action="Index" asp-route-orderBy="revusername">Username</a>
                }
                else
                {
                    <a asp-controller="AdminUser" asp-action="Index" asp-route-orderBy="username">Username</a>
                }
            </th>
            <th>
                @if (ViewBag.orderBy == "email")
                {
                    <a asp-controller="AdminUser" asp-action="Index" asp-route-orderBy="revemail">Email</a>
                }
                else
                {
                    <a asp-controller="AdminUser" asp-action="Index" asp-route-orderBy="email">Email</a>
                }
            </th>
            <th>
                @if (ViewBag.orderBy == "role")
                {
                    <a asp-controller="AdminUser" asp-action="Index" asp-route-orderBy="revrole">Role</a>
                }
                else
                {
                    <a a asp-controller="AdminUser" asp-action="Index" asp-route-orderBy="roles">Role</a>
                }
            </th>
            <th></th>
        </tr>
    </thead>

    @if (Model.Count() == 0)
    {
        <tr><td colspan="3" class="text-center">No User Accounts</td></tr>
    }
    else
    {
        foreach (UserRoleViewModel user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.Role</td>

                <td>
                    @if(user.Role != "Admin") { 
                        <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                            <a class="btn btn-sm btn-info" asp-action="EditUser"
                               asp-route-id="@user.Id">Edit</a>
                            <button type="submit"
                                    class="btn btn-sm btn-danger">
                                Delete
                            </button>
                        </form>
                    }
                </td>
            </tr>
        }
    }
</table>
<a class="btn btn-info" asp-action="CreateUser">Create</a>
<br />
<br />
<a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Back to Admin Index</a>


